{"transformerRest": {

	"transformationDescription": {
		
		"namespaceMappings": {
			"mapping": [
				{"prefix": "gmd", "namespace": "http://www.isotc211.org/2005/gmd"}
			]
		},

		"facetDescriptions": {
			"producerProfile": {
				"availabilityPath": "//*:contact/*:CI_ResponsibleParty | //*:ptcontac/*:cntinfo | //*:pointOfContact/*:CI_ResponsibleParty",
				"hoverover": {
					"template": "",
					"organizationNamePath": "//gmd:contact/gmd:CI_ResponsibleParty/gmd:organisationName | //gmd:pointOfContact/gmd:CI_ResponsibleParty/gmd:organisationName"
				},
				"drilldown": {
					"url": "http://www.geolabel.net/api/v1/drilldown?metadata=%s&facet=producer_profile"
				}
			
			},
			
			"producerComments": {
				"availabilityPath": "//gmd:identificationInfo//gmd:supplementalInformation",
				"hoverover": {
					"template": "",
					"producerCommentsPath": "//gmd:identificationInfo//gmd:supplementalInformation",
					"knownProblemsPath": ""
				},
				"drilldown": {
					"url": "http://www.geolabel.net/api/v1/drilldown?metadata=%s&facet=producer_profile"
				}
			},
			
			"lineage": {
				"availabilityPath": "//*:LI_Lineage | //*:lineage",
				"hoverover": {
					"template": "",
					"processStepCountPath": "count(//*:LI_Lineage//*:processStep | //*:lineage//*:processStep)"
				},
				"drilldown": {
					"url": "http://www.geolabel.net/api/v1/drilldown?metadata=%s&facet=producer_profile"
				}
			},
			
			"standardsCompliance": {
				"availabilityPath": "//*:metadataStandardName | //*:metstdv",
				"hoverover": {
					"template": "",
					"standardPath": "normalize-space(string-join( (//*:metadataStandardName/normalize-space(), //*:metstdv/normalize-space(), //*:metadataStandardVersion/normalize-space()), ', '))"
				},
				"drilldown": {
					"url": "http://www.geolabel.net/api/v1/drilldown?metadata=%s&facet=producer_profile"
				}
			},
			
			"qualityInformation": {
				"availabilityPath": "//gmd:dataQualityInfo",
				"hoverover": {
					"template": "",
					"scopeLevelPath": "//gmd:dataQualityInfo//gmd:scope//gmd:MD_ScopeCode/@codeListValue"
				},
				"drilldown": {
					"url": "http://www.geolabel.net/api/v1/drilldown?metadata=%s&facet=producer_profile"
				}
			},

			"citations": {
				"availabilityPath": "//*:LI_Lineage/*:processStep//*:sourceCitation/*:CI_Citation",
				"hoverover": {
					"template": "",
					"citationsCountPath": "count(//*:LI_Lineage/*:processStep//*:sourceCitation/*:CI_Citation)"
				},
				"drilldown": {
					"url": "http://www.geolabel.net/api/v1/drilldown?metadata=%s&facet=producer_profile"
				}
			}
		}
	}}
}